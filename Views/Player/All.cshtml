@model AllPlayersQueryModel

@{
    ViewBag.Title = "All Players";
}

<link rel="stylesheet" href="~/css/card.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/profile-card.css" asp-append-version="true" />

<div class="card-container">
    <span class="pro">PRO</span>
    <img src="img/rahul.jpg" alt="user"/>
    <h3>Rahul Yaduvanshi</h3>
    <h6>Nodia, U.P.</h6>
    <p>User interface designer and <br/> front-end developer</p>
    <div class="buttons">
        <button class="primary">
            Message
        </button>
        <button class="primary ghost">
            Following
        </button>
    </div>
    <div class="skills">
        <h6>Skills</h6>
        <ul>
            <li>UI / UX</li>
            <li>Front End Development</li>
            <li>HTML</li>
            <li>CSS</li>
            <li>JavaScript</li>
            <li>React</li>
            <li>Node</li>
        </ul>
    </div>
</div>


@if (!Model.Players.Any())
{
    <div class="jumbotron jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4 mt-5">There are no players yet</h1>
            @if (User.IsInRole(Roles.Administrator))
            {
                <p class="lead">
                    To add a player go to
                    <a asp-controller="Player" asp-action="AddPlayer" class="btn btn-outline-warning">Add Player</a>
                </p>
            }
            else
            {
                <p class="lead">
                    Contact the website administrator.
                </p>
            }
        </div>
    </div>
}
else
{
    <h2 class="text-center mb-4 mt-3">@ViewBag.Title</h2>

    @foreach (var player in Model.Players)
    {
        <div class="column">
            <div class="profile-card">
                <a asp-controller="Player" asp-action="Details" asp-route-id="@player.Id" />
                <img src="/UploadedPhotos/ProfilePhotos/@player.ProfilePhoto" class="img img-responsive">
                <div class="profile-name">
                    @player.Name
                </div>
                <div class="profile-overview">
                    <div class="profile-overview">
                        <div class="row text-center">
                            <div class="col">
                                <h3>@player.Rank</h3>
                                <p>Rank</p>
                            </div>
                            <div class="col">
                                <h3>@player.Wins</h3>
                                <p>Wins</p>
                            </div>
                            <div class="col">
                                <h3>@player.Losses</h3>
                                <p>Losses</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}