@model AllPlayersQueryModel

@{
    ViewBag.Title = "All Players";
}

<link rel="stylesheet" href="~/css/card.css" asp-append-version="true" />

<div class="container">
    <div class="row">
        <h2 class="text-center">@ViewBag.Title</h2>
        <div class="row mt-3 mb-3">
            @foreach (var player in Model.Players)
            {
                <div class="col-lg-3 mt-2">
                    <div class="card p-0">
                        <div class="card-image">
                            <img src="/UploadedPhotos/ProfilePhotos/@player.ProfilePhoto">
                        </div>
                        <div class="card-content d-flex flex-column align-items-center">
                            <h4 class="pt-2">@player.Name</h4>
                            <h5>Rank: @player.Rank</h5>
                            <a class="btn btn-outline-warning mb-1 mt-3">Join</a>
                            <a asp-controller="Player" asp-action="Edit" asp-route-id="@player.Id" class="btn btn-outline-primary mb-1 mt-1">Edit</a>
                            <a asp-controller="Player" asp-action="Delete" asp-route-id="@player.Id" class="btn btn-outline-danger mb-3 mt-1">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
