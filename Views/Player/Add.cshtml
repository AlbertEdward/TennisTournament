@model AddPlayerFormModel

<form>
  <div class="form-group">
    <label asp-for="Name">Name</label>
    <input class="form-control" placeholder="Enter tournament name...">
  </div>
  <div class="form-group">
    <label asp-for="Gender">Gender</label>
    <input class="form-control" placeholder="Enter gender...">
  </div>
    <div class="form-group">
    <label asp-for="StrongHand">Strong Hand</label>
    <input class="form-control" placeholder="Left/Right...">
  </div>
    <div class="form-group">
    <label asp-for="BackHandStroke">Back hand stroke</label>
    <input class="form-control" placeholder="Two/One hand...">
  </div>
  <div class="form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Check me out</label>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>

  <div class="custom-file">
  <input type="file" class="custom-file-input" id="customFile">
  <label class="custom-file-label" asp-for="Image">Upload photo</label>
</div>
</form>

