@model AddTournamentFormModel

<form method="post">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="Name" type="text" class="form-control" placeholder="Enter tournament name...">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="TypeId"></label>
        <select asp-for="TypeId" class="form-control">
            @foreach (var type in Model.TypeOfGames)
            {
                <option value="@type.Id">@type.Name</option>
            }
        </select>
    </div>
    <div class="form-group row">
        <label asp-for="MatchTypeId" class="col-sm-2 col-form-label">Match Type</label>
        <div class="col-sm-10">
            <input asp-for="MatchTypeId" type="text" class="form-control" placeholder="Enter match type...">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Sets" class="col-sm-2 col-form-label">Sets</label>
        <div class="col-sm-10">
            <input asp-for="Sets" type="text" class="form-control" placeholder="Enter sets...">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Games" class="col-sm-2 col-form-label">Games</label>
        <div class="col-sm-10">
            <input asp-for="Games" type="text" class="form-control" placeholder="Enter games...">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Rule" class="col-sm-2 col-form-label">Rule</label>
        <div class="col-sm-10">
            <input asp-for="Rule" type="text" class="form-control" placeholder="Enter rule...">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LastSet" class="col-sm-2 col-form-label">LastSet</label>
        <div class="col-sm-10">
            <input asp-for="LastSet" type="text" class="form-control" placeholder="Enter lastset...">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" asp-controller="Tournament" asp-action="Add" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
